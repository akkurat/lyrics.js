{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom.iterable",
			"dom"
		],
		"importHelpers": true,
		"preserveConstEnums": true,
		"sourceMap": true,

		"plugins": [
			{
				"name": "typescript-plugin-add-type"
			}
		],

		"typeRoots": [
			"./node_modules/@types",
			"./node_modules"
		],
		"types": [
			"meteor",
			"meteor-typings",
			"core-js",
			"requirejs"
		],

		"jsx": "react",
		"esModuleInterop": true
	}
}
